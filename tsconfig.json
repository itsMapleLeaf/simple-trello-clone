{
  "compilerOptions": {
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css", "keyframes", "injectGlobal"]
      }
    ],
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["src/setupTests.ts"],
  "include": ["src/**/*", "typings/**/*"]
}
